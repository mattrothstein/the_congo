<div class="push_left">
 <div class="page_label">
   <h1> SHOP ON CONGO </H1>
   </div>
   <% @products.each do |product| %>
    <% if product.images.count >= 1 %>

     <div class="product_display">
       <div style= "width:120px; height:120px; margin:auto;">
       <img style="max-width:100px; max-height:100px" src="<%= product.images.first.url%>" alt="product image">
      </div>
       <p><%= link_to "#{product.name.capitalize}", product%></p>
       <p>$<%= product.formatted_price %></p>

   </div>
     <% end %>
   <% end %>
   <div class="link">
     <br>
     <%= link_to 'New Product', new_product_path, class: "btn btn-default button" %>
     <br>
   </div>
 </div>
