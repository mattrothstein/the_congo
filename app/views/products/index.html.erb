<p id="notice"><%= notice %></p>
<div class="container">
  <div class="col-md-6 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-11 col-xs-offset-1">
      <h1>All Products</h1>
  </div>

        <table class="table striped-table">
          <thead>
            <tr>
              <th class="center">Name</th>
              <th class="center">Description</th>
              <th class="center">Price</th>
              <th class="center" colspan="3">Options</th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |product| %>
            <tr>
              <td class="center"><%= product.name %></td>
              <td class="center"><%= product.description.lines.first %></td>
              <td class="center">$<%= product.formatted_price %></td>
              <td class="center"><%= link_to 'Show', product, class: "btn-sm btn-success" %></td>
              <td class="center"><%= link_to 'Edit', edit_product_path(product), class: "btn-sm btn-success" %></td>
              <td class="center"><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      <br>
      <%= link_to 'New Product', new_product_path, class: "btn btn-primary button" %>
      <br>
    </div>
  </div>


  </div>
